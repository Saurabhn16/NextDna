    <!-- Add this line to display the username -->
<% if (loggedIn) { %>
    <h1 class="text-black"> Welcome, <%= username %>!</h1>
<% } %>
<div class="card">
<div class="container">
    <h1 class="mt-5 custom-heading">Artifacts</h1>
    <div class="row mt-3">
        <% artifacts.forEach(function(artifact) { %>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title"><%= artifact.signature %></h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Filename:-<%= artifact.filename %></h6>
                        <p class="card-text custom-text">
                            <img src="../uploads/<%= artifact.filename %>" alt="<%= artifact.originalname %>"
                                class="card-img-top img-fluid">
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">ID:<%= artifact._id %></small>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>


</div>
<div class="card">
<div class="container">
    <h1 class="mt-5 custom-heading">DOCUMENTS</h1>
    <div class="row mt-3">
        <% documents.forEach(function(document) { %>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= document.title %>
                        </h5>
                      
                        <p class="card-text custom-text">
                            <img src="../uploads/<%= document.filename %>"
                                alt="<%= document.title %>" class="img-fluid">
                        </p>
                   
                    <div class="card-footer">
                        <small class="text-muted">  <%= document.content %></small>
                    </div>
                </div>
            </div> </div>
        <% }); %>
    </div>
</div>
